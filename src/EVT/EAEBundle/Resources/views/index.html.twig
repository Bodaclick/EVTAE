{% extends '::basePublic.html.twig' %}
{% block title %}{{ "home.title"|trans }}{% endblock %}
{% block content %}
    <div class="fullwidthbanner-container slider-main">
        <div class="fullwidthabnner">
            <ul id="revolutionul" style="display:none;">
                <!-- THE FIRST SLIDE -->
                <li data-transition="fade" data-slotamount="8" data-masterspeed="700" data-delay="9400" data-thumb="">
                    <!-- THE MAIN IMAGE IN THE FIRST SLIDE -->
                    <img src="/bundles/evteae/assets/img/sliders/revolution/bg1.jpg" alt="">

                    <div class="caption lft slide_title slide_item_left"
                         data-x="0"
                         data-y="105"
                         data-speed="400"
                         data-start="1500"
                         data-easing="easeOutExpo">
                        {{ "home.slider.1.subtitle"|trans }}
                    </div>
                    <div class="caption lft slide_subtitle slide_item_left"
                         data-x="0"
                         data-y="180"
                         data-speed="400"
                         data-start="2000"
                         data-easing="easeOutExpo">
                        {{ "home.slider.1.title"|trans }}
                    </div>
                    <div class="caption lft slide_desc slide_item_left"
                         data-x="0"
                         data-y="220"
                         data-speed="400"
                         data-start="2500"
                         data-easing="easeOutExpo">
                        {{ "home.slider.1.description"|trans|raw }}
                    </div>
                    <a class="caption lft btn green slide_btn slide_item_left" href="/products"
                       data-x="0"
                       data-y="290"
                       data-speed="400"
                       data-start="3000"
                       data-easing="easeOutExpo">
                       {{ "home.slider.1.button"|trans }}
                    </a>
                    <div class="caption lfb"
                         data-x="640"
                         data-y="55"
                         data-speed="700"
                         data-start="1000"
                         data-easing="easeOutExpo"  >
                        <img src="/bundles/evteae/assets/img_custom/calendar.png" alt="Image 1">
                    </div>
                </li>
            </ul>
            <div class="tp-bannertimer tp-bottom"></div>
        </div>
    </div>
{% endblock %}