{% extends "EVTEAEBundle:Email:Base.Mail.twig" %}

{% block title %}{% trans %}title.new.lead.manager{% endtrans %} {{ vertical.domain }}{% endblock %}

{% block content %}
<table class="container content" align="center">
    <tr>
        <td>
            <table class="row note">
                <tr>
                    <td class="wrapper last">
                        <h4>{% trans %}body.new.lead.manager{% endtrans %}</h4>
                        <p>Showroom: {{ showroom.provider.name }} </p>
                        <span class="devider"></span>
                        <!-- BEGIN: Note Panel -->
                        <table class="twelve columns" style="margin-bottom: 10px">
                            <tr>
                                <th>{% trans %}lead.user.name{% endtrans %}</th>
                                <th>{% trans %}lead.user.surname{% endtrans %}</th>
                                <th>{% trans %}lead.user.email{% endtrans %}</th>
                                <th>{% trans %}lead.user.phone{% endtrans %}</th>
                            </tr>
                            <tr>
                                <td>{{ personal_info.name  }}</td>
                                <td>{{ personal_info.surnames }}</td>
                                <td>{{ email.email }}</td>
                                <td>{{ personal_info.phone }}</td>
                            </tr>
                        </table>
                        <span class="devider"></span>
                        <table class="twelve columns" style="margin-bottom: 10px">
                            <tr>
                                <th>{% trans %}lead.event.date{% endtrans %}</th>
                                <th>{% trans %}lead.event.type{% endtrans %}</th>
                                <th>{% trans %}lead.event.location{% endtrans %}</th>
                                <th>{% trans %}lead.date{% endtrans %}</th>
                            </tr>
                            <tr>
                                <td>{{ event.date | date("d/m/Y") }}</td>
                                <td>{{ event.type.name }}</td>
                                <td>{{ event.location.admin_level1  }} - {{ event.location.admin_level2 }}</td>
                                <td>{{ created_at | date("d/m/Y") }}</td>
                            </tr>
                        </table>
                        <span class="devider"></span>
                        <table class="twelve columns" style="margin-bottom: 10px">
                            <tr>
                                <th>{% trans %}lead.observations{% endtrans %}</th>
                            </tr>
                            <tr>
                                <td>{{ information_bag.parameters.observations | default('') }}</td>
                            </tr>
                        </table>
                        <span class="devider"></span>
                        <!-- END: Note Panel -->
                    </td>
                    <td class="expander"></td>
                </tr>
            </table>
        </td>
    </tr>
</table>
{% endblock %}