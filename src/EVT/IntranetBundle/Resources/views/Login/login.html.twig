{%  extends '::login.html.twig' %}

{% block content %}
<div class="logo">
    <a href="/">
        <img src="{{ asset('bundles/evtintranet/assets/img_custom/logo-e-vertical-104x17.png') }}" alt=""/>
    </a>
</div>
<!-- END LOGO -->
<!-- BEGIN LOGIN -->
<div class="content">
<!-- BEGIN LOGIN FORM -->
<form class="login-form" action="{{ path('login_check') }}" method="post">
    <h3 class="form-title">{{ "Login to your account"|trans }}</h3>
    {% if error %}
    <div class="alert alert-danger">
        <button class="close" data-close="alert"></button>
			<span>
				 {{ error.message }}
			</span>
    </div>
    {% endif %}
    <div class="form-group">
        <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
        <label class="control-label visible-ie8 visible-ie9">{{ "Username"|trans }}</label>
        <div class="input-icon">
            <i class="fa fa-user"></i>
            <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" id="username" name="_username" value="{{ last_username }}" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">{{ "Password"|trans }}</label>
        <div class="input-icon">
            <i class="fa fa-lock"></i>
            <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Password"  id="password" name="_password" />
        </div>
    </div>
    <div class="form-actions">
        <label class="checkbox">
            <input type="checkbox" name="remember" id="remember_me" name="_remember_me" /> {{ "Remember me"|trans }} </label>
        <button type="submit" class="btn green pull-right">
            {{ "Login"|trans }} <i class="m-icon-swapright m-icon-white"></i>
        </button>
    </div>
    <div class="forget-password">
        <h4>{{ "Forgot your password ?"|trans }}</h4>
        <p>
            {{ "no worries, click"|trans }}
            <a href="javascript:;" id="forget-password">
                {{ "here"|trans }}
            </a>
            {{ "to reset your password"|trans }}.
        </p>
    </div>
</form>
<!-- END LOGIN FORM -->
<!-- BEGIN FORGOT PASSWORD FORM -->
<form class="forget-form" action="{{ path('resetpassword') }}" method="post">
    <h3>{{ "Forget Password ?"|trans }}</h3>
    <p>
        {{ "Enter your e-mail address below to reset your password"|trans }}.
    </p>
    <div class="form-group">
        <div class="input-icon">
            <i class="fa fa-envelope"></i>
            <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Email" name="email"/>
        </div>
    </div>
    <div class="form-actions">
        <button type="button" id="back-btn" class="btn">
            <i class="m-icon-swapleft"></i> {{ "Back"|trans }} </button>
        <button type="submit" class="btn green pull-right">
            {{ "Submit"|trans }} <i class="m-icon-swapright m-icon-white"></i>
        </button>
    </div>
</form>
<!-- END FORGOT PASSWORD FORM -->
</div>
<!-- END LOGIN -->
<!-- BEGIN COPYRIGHT -->
<div class="copyright">
    2014 &copy; E-Vertical
</div>
<!-- END COPYRIGHT -->
{% endblock %}