{% extends 'EVTIntranetBundle::layout.html.twig' %}
{% block pageContent %}
    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <!-- BEGIN PAGE HEADER-->
            <div class="row">
                <div class="col-md-12">
                    <!-- BEGIN PAGE TITLE & BREADCRUMB-->
                    <h3 class="page-title">Lead Detail</h3>
                    <ul class="page-breadcrumb breadcrumb">
                        <li>
                            <i class="fa fa-exchange"></i>
                            <a href="/leads">Leads</a>
                        </li>
                        <li>
                            <i class="fa fa-angle-right"></i>
                            <a href="/leads/{{ lead.id }}">Lead detail</a>
                        </li>
                    </ul>
                    <!-- END PAGE TITLE & BREADCRUMB-->
                </div>
            </div>
            <!-- END PAGE HEADER-->
            <!-- BEGIN PAGE CONTENT-->
            <div class="row">
                <div class="col-md-12">
                    <!-- BEGIN SAMPLE TABLE PORTLET-->
                    <div class="portlet box grey">
                        <div class="portlet-title">
                            <div class="caption">Lead data detail</div>
                        </div>
                        <div class="portlet-body flip-scroll">
                            <table class="table table-bordered table-hover">
                                <tr>
                                    <td>Created at</td>
                                    <td class="success">{{ lead.created_at|date("d/m/Y H:i") }}</td>
                                </tr>
                                <tr>
                                    <td>Vertical</td>
                                    <td class="active">{{ lead.showroom.vertical.domain }}</td>
                                </tr>
                                <tr>
                                    <td>Provider</td>
                                    <td class="active">{{ lead.showroom.provider.name }}</td>
                                </tr>
                                <tr>
                                    <td>Name</td>
                                    <td class="active">{{ lead.personal_info.name }}
                                        {{ lead.personal_info.surnames }}</td>
                                </tr>
                                <tr>
                                    <td>Email</td>
                                    <td class="success"><a href="mailto:{{ lead.email.email }}" target="_blank">
                                        {{ lead.email.email }}
                                    </a></td>
                                </tr>
                                <tr>
                                    <td>Phone</td>
                                    <td class="success"><a href="tel:{{ lead.personal_info.phone }}" target="_blank">
                                        {{ lead.personal_info.phone }}
                                    </a></td>
                                </tr>
                                <tr>
                                    <td>Event Type</td>
                                    <td class="active">{{ lead.event.type.name }}</td>
                                </tr>
                                <tr>
                                    <td>Event Date</td>
                                    <td class="success">{{ lead.event.date|date("d/m/Y") }}</td>
                                </tr>
                                <tr>
                                    <td>Event Location</td>
                                    <td class="active">{{ lead.event.location.admin_level1 }}
                                        ({{ lead.event.location.admin_level2 }})
                                    </td>
                                </tr>
                                <tr>
                                    <td>Comments</td>
                                    <td class="active">{{ lead.information_bag.parameters.observations }}</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <!-- END SAMPLE TABLE PORTLET-->
                </div>
            </div>
            <!-- END PAGE CONTENT-->
        </div>
    </div>
    <!-- END CONTENT -->
{% endblock %}